{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "customerUpdate": {
      "path": "/_v/customer/:id/update",
      "public": true
    },
    "customer": {
      "path": "/_v/customer/*documentId",
      "public": true
    },
    "ping": {
      "path": "/_v/service-example/ping",
      "public": true
    },
    "status": {
      "path": "/_v/status/:code",
      "public": true
    },
    "holaMundo": {
      "path": "/holaMundo",
      "public": true
    },
    "products": {
      "path": "/_v/products",
      "public": true
    },
    "skus": {
      "path": "/_v/sku",
      "public": true
    },
    "skusFile": {
      "path": "/_v/sku/:skuId/file",
      "public": true
    },
    "pokemon": {
      "path": "/_v/pokemon",
      "public": false,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get"],
          "principals": ["*"]
        }
      ]
    }
  }
}
